@model OrderModel

@{
    ViewData["Title"] = "Корзина";
}

<h1>Корзина</h1>

<table class="table table-sm table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">№</th>
            <th scope="col">Имя продукта</th>
            <th scope="col">Описание продукта</th>
            <th scope="col">Количество</th>
            <th scope="col">Цена</th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.Items.Length; i++)
         {
        <tr>
            <td class="text-right">@(i + 1)</td>
            <td>@Model.Items[i].ProductName</td>
            <td>@Model.Items[i].ProductDescription</td>
            <td class="text-right">@Model.Items[i].Count</td>
            <td class="text-right">@Model.Items[i].Price</td>
            <td class="text-center">
                <form class="form-inline" action="@Url.Action("RemoveItem", "Order")" method="post">
                    <input type="hidden" name="productId" value="@Model.Items[i].ProductId" />
                    <button class="btn btn-danger" type="submit">Удалить</button>
                </form>
            </td>
        </tr>
         }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Итого</td>
            <td class="text-right">@Model.TotalCount</td>
            <td class="text-right">@Model.TotalPrice</td>
        </tr>
    </tfoot>
</table>
